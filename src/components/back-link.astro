---
const { text, path, position = "top" } = Astro.props;
---

<a
  class:list={["back", {position}]}
  href={path}
>
  <span class="icon">
    <svg
    width="15"
    height="15"
    viewBox="0 0 15 15"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    >
      <path
      d="M6.85355 3.14645C7.04882 3.34171 7.04882 3.65829 6.85355 3.85355L3.70711 7H12.5C12.7761 7 13 7.22386 13 7.5C13 7.77614 12.7761 8 12.5 8H3.70711L6.85355 11.1464C7.04882 11.3417 7.04882 11.6583 6.85355 11.8536C6.65829 12.0488 6.34171 12.0488 6.14645 11.8536L2.14645 7.85355C1.95118 7.65829 1.95118 7.34171 2.14645 7.14645L6.14645 3.14645C6.34171 2.95118 6.65829 2.95118 6.85355 3.14645Z"
      fill="currentColor"
      fill-rule="evenodd"
      clip-rule="evenodd"
      ></path>
    </svg>
  </span>
  <span class="text">{text}</span>
</a>

<style lang="scss">
.back {
  margin-left: calc(-1 * var(--spacing-content-03));
  border: var(--border-element-02) transparent;
  display: flex;
  cursor: pointer;
  align-items: center;
  width: 160px;
  justify-content: center;
  padding: var(--spacing-content-01) var(--spacing-content-03);
  border-radius: var(--border-radius-s);
  text-decoration: none;
  text-transform: uppercase;
  position: relative;
  outline: none;
  font-size: var(--font-heading-5);
  }

.top {
  margin-bottom: var(--spacing-layout-02);
  margin-top: calc(0rem - var(--spacing-layout-06) + var(--spacing-layout-02));
  }

.bottom {
  margin-top: var(--spacing-layout-02);
  margin-bottom: calc(0rem - var(--spacing-layout-06) + var(--spacing-layout-02));
  }

.back:visited {
  color: var(--text-color-primary);
  }

.back:focus {
  border-color: var(--color-interactive-primary-focus);
  outline-style: none;
  }

.back:hover {
  color: var(--color-interactive-primary-above);
  background-color: var(--color-interactive-primary-hover);
  }

.icon {
  display: flex;
  }

.text {
  margin-left: var(--spacing-content-03);
  }

.back svg {
  width: 20px;
  height: 20px;
  fill: var(--color-text-primary);
  }

@media (min-width: 768px) {
  .back {
  width: 182px;
  }
  }
</style>
